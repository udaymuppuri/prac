pipeline {
    agent any
    tools { 
        maven 'Maven'  
    }

    stages {
        stage('SCM') {
            steps {
                echo 'Hello Clone stage'
                git credentialsId: '721a8e8f-f73d-4916-978f-829a2f500619', url: 'https://github.com/udaymuppuri/maven-project1.git'
                }
        }
        stage('Build') {
            steps {
                echo 'Hello Build'
                bat 'mvn clean install'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello Deploy'
                deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'a0754a8d-262e-4144-ac69-4afa821dbefa', path: '', url: 'http://localhost:8081/')], contextPath: 'devops108.war', war: '**/*.war'
      
            }
        }
    }
}
